# DJ AI App - Production Environment Configuration

# ===========================================
# BACKEND CONFIGURATION (dj-ai-core)
# ===========================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_DEBUG=false

# Audio Processing
MAX_FILE_SIZE=50MB
SUPPORTED_FORMATS=mp3,wav,flac,m4a
SAMPLE_RATE=22050

# ML Models
MODEL_DIR=./data/models/
ENABLE_GPU=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS (for frontend integration)
CORS_ORIGINS=https://yourdomain.com,http://localhost
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# ===========================================
# FRONTEND CONFIGURATION (dj-ai-frontend)
# ===========================================

# Backend API Configuration
REACT_APP_API_URL=https://yourdomain.com/api
REACT_APP_API_BASE_URL=https://yourdomain.com/api
REACT_APP_WEBSOCKET_URL=wss://yourdomain.com/ws

# Production Configuration
NODE_ENV=production

# ===========================================
# DOCKER CONFIGURATION
# ===========================================

# Compose Project Name
COMPOSE_PROJECT_NAME=dj-ai-app-prod

# Build Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# ===========================================
# STORAGE CONFIGURATION
# ===========================================

# Upload Directory
UPLOADS_DIR=./data/uploads
MODELS_DIR=./data/models

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=./config/ssl/cert.pem
SSL_KEY_PATH=./config/ssl/key.pem

# Rate Limiting
RATE_LIMIT_API=10
RATE_LIMIT_UPLOAD=2
